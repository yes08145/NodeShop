<body class="bg-gradient-primary">

  <div class="container" style="margin-top:100px">

    <!-- Outer Row -->
    <div class="row justify-content-center" style="height:700px">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image">
                <!-- 사진 추가 부분(?)-->
              <img src="/images/loginauction.jpg" class="align-self-start mr-3" alt="프사" width=475px height=434px>

              </div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">HYBRID AUCTION</h1>
                    <h2 class="h4 text-gray-900 mb-4">(log-in)</h2>
                  </div>
                  <form accept-charset="UTF-8" role="form" method="post" action="/auth">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" name="uid" placeholder="Enter ID">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control form-control-user" id="exampleInputPassword" name="pass" placeholder="Password">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" class="btn btn-secondary btn-user btn-block" value="Login" />
                    </div>
                  </form>
                    <!--버튼 수정-->
                    <!--구글계정으로 가입, 페북 계정으로 가입 삭제
                    <hr>

                  </form>
                  <hr>
                -->
                  <div class="text-center">
                    <a class="small" href="/idfind">Forgot ID?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="/passfind">Forgot Password?</a>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

